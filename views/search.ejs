<!doctype html>
<!-- views/search.ejs - Search form for books
     Notes: The current app provides a placeholder search-result route.
-->
<html>
  <head>
    <title>Search <%=shopData.shopName%></title>
    <link rel="stylesheet"  type="text/css" href="/main.css" />
  </head>
  <body>
    <h1>Search <%=shopData.shopName%></h1>
    <form action="search-result" method="GET">
      <p>What book do you want?</p>
      <input id="search-box" type="text" name="search_text">
      <label><input type="checkbox" name="advanced" value="1"> Advanced (partial match)</label>
      <input type="submit" value="Search" >
    </form>
  </body>
</html>